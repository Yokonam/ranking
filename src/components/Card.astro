---

interface Props {
	title: string;
	img: string;
  artist: string;
  href: string;
}

const {title, img, artist, href } = Astro.props;
---

<li class="link-card">
  <a href=`${href}` target="_blank">
    <div class="img">
      <img src=`${img}` alt=`${title}` />
    </div>
    <p class="rank">1‰Ωç</p>
    <div class="body">
      <p class="title">{title}</p>
      <p class="artist">{artist}</p>
    </div>
  </a>
</li>
<style>
  .link-card{
    background: rgb(40, 40, 40);
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    width: 450px;
    font-weight: 900;
    border: solid 2px #000;
  }
  .img{
    display: block;
  }


  a{
    transition: opacity 0.3s;
    display: block;
    text-decoration: none;
  }
  a:hover{
    opacity: 0.8;
  }

  img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 1;
    display: block;
  }
  p{
    margin: 0;
  }
  .rank{
    text-align: center;
    width: 100%;
    font-size: 3rem;
    color: #000;
    background-color: rgb(192, 192, 192);
  }
  .body{
    padding: 1rem;
    text-align: center;
    color: #fff;
    font-size: 4rem;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  .title{
    font-size: 4rem;
  }
  .artist{
    font-size: 3rem;
  }
</style>
