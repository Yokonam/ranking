---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="「本日のおすすめ曲」人気曲ランキング2024">
	<main>
    <!-- <h1>「本日のおすすめ曲」人気曲ランキング2024</h1>
    <ul class="card-list">
      <Card />
    </ul> -->
    <audio id="bgm" loop>
      <source src="assets/audio/bgm.mp3" type="audio/mp3">
    </audio>

  <button id="play">再生</button>
  <button id="pause">停止</button>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		color: white;
		font-size: 20px;
		line-height: 1.6;
    height: 100%;
    display: grid;
    place-items: center;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

  ul{
    position: fixed;
    top: 0;
    left: 0;
    list-style: '';
    margin: 0;
    padding: 0;
    display: flex;
    height: 100%;
  }
</style>
<script>
  const bgm = document.getElementById('bgm') as HTMLAudioElement;

  const playButton = document.getElementById('play') as HTMLButtonElement;
  const pauseButton = document.getElementById('pause') as HTMLButtonElement;

  playButton.addEventListener('click', function() {
      bgm.play();
  });

  pauseButton.addEventListener('click', function() {
      bgm.pause();
      bgm.currentTime = 0;
  });
</script>
